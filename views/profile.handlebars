<header class="flex-title">
    <img src="./assets/img/moonjar.png" id="logo"/>
  <h1 class="flex-title-child"> DAILY MOOD</h1>
 <ul class="nav flex-title-child">
  <li class="nav-item" id="logout">
    <a class="nav-link link-dark">LOGOUT</a>
     
  </li>
</ul>
</div>
</header>

<container class="text-center quote-box" id="main">
  <div id="quoteArea">
    <h4 id="bigQuote"></h4>
    <h5 id="author"></h5>
</container>

<div class="flex-container">
  <container class="flex-child previous-mood">
    <h4 id="prev-mood">Previous Moods</h4>
  </container>

  <container class="question-container flex-child">
  <form class="row question-form col-lg-10 g-3">
    <h4>Reflection</h4>
    <section id="row1">
      <div class="col-auto ">
        <label for="hows-today" class="form-label">How was your day?</label>
        <input type="text" class="form-control" id="hows-today">
      </div>
      <div class="col-auto pt-3">
        <label for="improveDay" class="form-label">What could you have done to make your day better?</label>
        <input type="text" class="form-control" id="improveDay">
      </div>
    </section>

    <section id="row2">
      <div class="col-auto pt-1">
        <label for="moodProud" class="form-label">Name something that made you proud of yourself today:</label>
        <input type="text" class="form-control" id="moodProud" placeholder="Today I...">
      </div>
      <div class="col-auto pt-3">
        <label for="descript" class="form-label">Which best describes your mood for today?</label>
        <select id="descript" class="form-select">
          <option selected></option>
          <option>Happy</option>
          <option>Okay</option>
          <option>Sad</option>
        </select>
      </div>
      <div class="col-auto pt-3">
        <label for="quote-descript" class="form-label">How did the quote fit into your day?</label>
        <input type="text" class="form-control" id="quote-descript">
      </div>
    </section>
    <div class="col-12">
      <button type="submit" class="btn btn-secondary" id="mood-form-save">Save</button>
    </div>
  </form>
  </container>
</div>


