        <div class="form-group">
          <input class="text-center form-input" placeholder="Email" type="text" id="email-signup" />
        </div>
        <div class="form-group">
          <input class="text-center form-input" placeholder="Username" type="text" id="name-signup" />
        </div>
        <div class="form-group">
          <input class="text-center form-input" placeholder="********" type="password" id="password-signup" />
        </div>
        <div class="form-group">
          <button class="btn btn-secondary" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
